section.menu-category.__main-dishes
	header
		h2.category-name-heading= category.name
		span.category-short-slogan= category.shortSlogan
	section.foods-list
		- for (var i = 0; i < category.foods.length; ++i) {
			a.food-card(href="/food")
				img.food-card__image(src= category.foods[i].img["2x"])
				div.food-card__info
					h3.food-card__name= category.foods[i].name
					span.food-card__category= category.foods[i].category
				div.food-card--footer
					span.food-card__price= "â‚º" + category.foods[i].price
					button.food__add-to-card(data-food-id=category.foods[i].id)
						i.icon.ion-ios-add
		- }
		