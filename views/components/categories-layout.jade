section.menu-category.__main-dishes
	header
		h2.category-name-heading= category.name
		span.category-short-slogan= category.shortSlogan
	section.foods-list
		- for (var i = 0; i < category.foods.length; ++i) {
			- let el = category.foods[i]
			a.food-card(href=`/food/${el.restAPI}`)
				img.food-card__image(src= el.img["2x"])
				div.food-card__info
					h3.food-card__name= el.name
					span.food-card__category= el.category
				div.food-card--footer
					span.food-card__price= "â‚º" + el.price
					button.food__add-to-card(data-food-id=el.id)
						i.icon.ion-ios-add
		- }
		